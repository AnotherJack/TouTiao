<?xml version="1.0" encoding="utf-8"?>
<cn.edu.cuc.toutiao.widgets.NestedCoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <FrameLayout
        android:id="@+id/contentFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:elevation="10dp"
        app:layout_behavior="cn.edu.cuc.toutiao.behaviors.BottomNavigationBehavior"
        app:tabIndicatorHeight="0dp">
        <android.support.design.widget.TabItem
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout="@layout/bottom_item_home"/>
        <android.support.design.widget.TabItem
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout="@layout/bottom_item_video"/>
        <android.support.design.widget.TabItem
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout="@layout/bottom_item_fav"/>
        <android.support.design.widget.TabItem
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout="@layout/bottom_item_profile"/>
    </android.support.design.widget.TabLayout>
</cn.edu.cuc.toutiao.widgets.NestedCoordinatorLayout>